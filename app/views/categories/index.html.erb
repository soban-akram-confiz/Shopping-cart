<%= link_to 'Add category', new_category_path %>

<% if @categories.size == 0 %>
    <h4>No Category Found.</h4>
<% else %>
    <h1>All Categories</h1>

    <table>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th colspan="2"></th>
      </tr>

      <%= render(@categories) %>
    </table>
<% end %>