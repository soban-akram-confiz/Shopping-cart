<tr>
  <td><%= product.title %></td>
  <td><%= product.price %></td>
  <td><%= product.quantity %></td>
  <td><%= link_to 'Show', product_path(product) %></td>

  <% if current_user %>
      <td><%= link_to 'Add to Cart', add_to_cart_shopping_cart_path(product) %></td>
  <% end %>

  <% if can? :update, @product %>
      <td><%= link_to 'Edit', edit_product_path(product) %></td>
      <td><%= link_to 'Delete', product_path(product), method: :delete, data: { confirm: 'Are you sure to delete?'} %></td>
  <% end %>

</tr>